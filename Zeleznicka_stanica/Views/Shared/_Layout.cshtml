<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
   
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Početna strana", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Polasci", "Pocetna", "Korisnik")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>

                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Rezervacije", "PrikazRezervacije", "Korisnik")</li>
                        <li>@Html.ActionLink("Log out", "Logout", "Account")</li>
                    </ul>
                }

                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Log in", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    </ul>
                }


                @if (User.IsInRole("admin"))
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Admin stranica", "Index", "Admin")</li>
                    </ul>
                }
                @if (User.IsInRole("radnik"))
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Radnik stranica", "Index", "Admin")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom">
            <div class="row" id="footer-div">

                <div class="col-md-6 footer-contact" style="text-align:center">
                    <h4 class="page-header text-center">Kontakt</h4>
               
                    <ul class="list-inline contact-list">
                        <li class="list-inline-item"><i class="fa fa-map-marker"></i> Savski nasip 7</li>
                        <li class="list-inline-item"><i class="fa fa-phone"></i> +381 011 25 36 89</li>
                        <li class="list-inline-item"><i class="fa fa-envelope"></i> rezervacija@karte.com</li>
                    </ul>
                </div>
                <div class="col-md-6 footer-follow" style="text-align:center">
                    <h4 class="page-header text-center">Pratite nas!</h4>
                    <ul class="list-inline logo-list">
                        <li class="list-inline-item"><a href="http://facebook.com"><i class="fa fa-facebook-official fa-2x"></i></a></li>
                        <li class="list-inline-item"><a href="http://twitter.com"><i class="fa fa-twitter fa-2x"></i></a></li>
                        <li class="list-inline-item"><a href="http://instagram.com"><i class="fa fa-instagram fa-2x"></i></a></li>
                      
                    </ul>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
